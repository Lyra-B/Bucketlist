$(document).ready(function(){
  $('#add-destination-button').click(function(event){
    event.preventDefault();
      $.ajax ({
      url: '/destinations',
      type: 'POST',
      data: $('form').serialize(),
      dataType: "html",
      success: function(html) {
        $('#destinations').append(html);
      }
    });
  });
// });

